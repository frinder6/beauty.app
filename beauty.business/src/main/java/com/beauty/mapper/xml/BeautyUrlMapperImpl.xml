<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.beauty.mapper.BeautyUrlMapperImpl">

	<resultMap id="BaseResultMap" extends="com.beauty.mapper.BeautyUrlMapper.BaseResultMap" type="com.beauty.entity.BeautyUrl">
		<id column="id" property="DT_RowId" jdbcType="BIGINT" />
	</resultMap>

	<sql id="Base_Column_List">
		<include refid="com.beauty.mapper.BeautyUrlMapper.Base_Column_List" />
	</sql>

	<sql id="Base_Where_Clause">
		<where>
			1 = 1
			<if test="searchValue">
				AND ( url LIKE "%" #{searchValue} "%" OR remark LIKE "%" #{searchValue} "%" OR is_deleted LIKE "%" #{searchValue} "%" )
			</if>
			<if test="url">
				AND url = #{url}
			</if>
			<if test="dialog">
				AND NOT EXISTS (SELECT 1 FROM beauty_resource r WHERE r.url = u.url)
				AND is_deleted = 1
			</if>
			<if test="serialize">
				${serialize}
			</if>
		</where>
	</sql>

	<select id="selectPage" parameterType="java.util.HashMap" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM beauty_url u
		<include refid="Base_Where_Clause" />
		ORDER BY
		<if test="orderColumn">
			${orderColumn} ${orderDir}
		</if>
		<if test="orderColumn == null">
			id DESC
		</if>
		LIMIT #{from}, #{size}
	</select>
	<select id="selectCount" parameterType="java.util.HashMap" resultType="int">
		SELECT COUNT(1)
		FROM beauty_url u
		<include refid="Base_Where_Clause" />
	</select>



	<delete id="deleteByPrimaryKeys" parameterType="java.util.List">
		delete from beauty_url
		where 1 != 1
		<if test="list.size() > 0">
			OR id IN
			<foreach collection="list" open="(" close=")" item="id" separator=",">
				#{id}
			</foreach>
		</if>
	</delete>

	<update id="batchMark" parameterType="java.util.List">
		update beauty_url set is_deleted = IF(is_deleted = 0, 1, 0)
		where 1 != 1
		<if test="list.size() > 0">
			OR id IN
			<foreach collection="list" open="(" close=")" item="id" separator=",">
				#{id}
			</foreach>
		</if>
	</update>

</mapper>